{% extends "layout.njk" %}
{% block content %}
    <div class="row animated fadeInUp">
        <div class="col-sm-8">
            <form class="form-horizontal" role="form" method="POST" action="/site/save?_csrf={{ csrf }}"
                  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title" class="col-sm-1 control-label">标题
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="title" placeholder="请输入标题">
                    </div>
                </div>
                <div class="form-group">
                    <label for="des" class="col-sm-1 control-label">描述
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="des" name="des" placeholder="请输入描述">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputfile" class="col-sm-1 control-label">源文件
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input type="file" name="file" id="inputfile">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                        <button type="submit" class="btn btn-primary">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
